@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cliente - Filtro</h1>

<form action="Filtro" method="post">
    <div class="form-horizontal">
        <hr />
        @using (Html.BeginForm("ShowClients"))
        {
            <div class="form-group">
                <select class="form-control" id="select" name="select">
                    <option value="NM_CLIENTE">NOME</option>
                    <option value="NR_DOCUMENTO">CPF</option>
                    <option value="NR_DOCUMENTO">CNPJ</option>
                </select>
            </div>

            <div class="form-group">
                <input type="text" class="form-control" id="input" name="input"/>
            </div>

            <hr />


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="reset" value="Limpar" class="btn btn-default" />
                    <input type="submit" value="Filtrar" class="btn btn-default" />
                </div>
            </div>
        }
 </div>

</form>

<div>
    <a asp-controller="Cliente" asp-action="Index">Voltar</a>
</div>